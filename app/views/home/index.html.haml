.row.body-element
  .col-lg-3
    %span.body-title Message Center
  .col-lg-9.pull-right.case-cta
    = link_to "Compose Message", new_case_path, class: "btn btn-small btn-primary"
.row.body-element
  .col-lg-2
    = render 'shared/messages_menu'
  .col-lg-10{data: {role: "inbox", showing: true}}
    %table
      = render partial: 'shared/message_list', locals: {cases: @inbox_cases}
  .col-lg-10{data: {role: "sent"}, style: "display: none;"}
    %table
      = render partial: 'shared/message_list', locals: {cases: @sent_cases}

