.row.body-element.topframe
  .col-lg-12
    %ul.nav.navbar-nav.navbar-left
      %li
        %span.pull-left
          - if @current_practice
            = link_to  @current_practice.try(:name), organization_path(@current_practice)
          -else
            = link_to 'No practice selected', "#"
      %li
        %span.pull-left
          = link_to "Patients", patients_path
      %li
        %span.pull-left
          = link_to "Practitioners", practitioners_path
      %li
        %span.pull-left
          - if @patient
            = link_to "PT: #{@patient.decorate.full_name}", patient_path(@patient)
          -else
            = link_to 'No patient selected', "#"
    %ul.nav.navbar-nav.navbar-right
      %li
        - if user_signed_in?
          %span.pull-right.logout-link
            = link_to "Hello #{current_user.practitioner.decorate.full_name}", "#"
            = link_to destroy_user_session_path, method: :delete, data: {role: 'signout'} do
              %i.glyphicon.glyphicon-remove
              Logout
        - else
          %span.pull-right.login-link
            = link_to "Sign in", "#"

