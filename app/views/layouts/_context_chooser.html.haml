-patient_options = options_for_select(@patients.map{|p| [p.decorate.last_first_with_dob, p.id]}.sort, @patient.try(:id))
.row.body-element.selector-bar
  .col-sm-4
    = "Doctor: #{@practitioner.try(:full_name)}"
  .col-sm-4
    = bootstrap_form_tag(url: select_patient_path, data: {role: 'patient-form'}, layout: :horizontal) do |f|
      = f.select :patient, patient_options , data: {role: 'patient-picker'}, include_blank: true


