.row
  .col-sm-6
    = bootstrap_form_for(@prescription_order,  data: {role: 'patient-form'}, layout: :horizontal) do |f|
      = f.text_field :rx_id, label: "Rx ID", disabled: true
      = f.hidden_field :rx_id
      = f.select 'patient_id', Patient.all.map{|d| [d.decorate.last_first_with_dob, d.id]},{include_blank: true}, data: {type: 'select2', change: 'update-pt'}
      .form-group
        .col-sm-2
        .col-sm-10.pt-info
          = @patient.try(:pt_description)
      = f.select 'practitioner_id', Practitioner.all.map{|d| [d.full_name, d.id]},{include_blank: true }, data: {type: 'xselect2'}
      = f.select 'drug_id', Drug.all.map{|d| [d.name, d.id]},{label: 'Rx', include_blank: true}, data: {type: 'select2', attr: 'drug_id', change: 'update-rx'}
      = f.text_field :dispense_amount
      = f.text_area :rx_instructions, label: 'SIG'
      = f.text_area :patient_instructions
      = f.date_field :created_at, disabled: true, label: 'Created'
      = f.date_field :expiration_date,  label: 'Expires'
      = f.text_field :refills

      = f.select 'pharmacy_id', Pharmacy.all.map{|d| [d.name, d.id]},{include_blank: true}, class: 'form-control', data: {type: 'select2'}
      .submit.pull-right
        = link_to "Print Prescription", "#", data: {warning: 'coming-soon', message: "Printing prescriptions"}, class: "btn-standard btn btn-primary send print"
        = f.submit "Submit", class: "btn-standard btn btn-primary send"

  .col-sm-1
  .col-sm-5
    .body-title Monograph
    .monograph
      %p.drug-attr#title= @prescription_order.drug.try :name
      %p.drug-attr Adult Dosing
      %p.drug-desc#adult_dosing= @prescription_order.drug.try :adult_dosing
      %p.drug-attr Peds Dosing
      %p.drug-desc#peds_dosing= @prescription_order.drug.try :peds_dosing
      %p.drug-attr Contraindications & Cautions
      %p.drug-desc#contraindications= @prescription_order.drug.try :contraindications
      %p.drug-attr Interactions
      %p.drug-desc#interactions= @prescription_order.drug.try :interactions
      %p.drug-attr Pregnancy / Lactating Precautions
      %p.drug-desc#pregnancy_lactating_precautions= @prescription_order.drug.try :pregnancy_lactating_precautions

